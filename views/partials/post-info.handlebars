<article class="post">
  <div class="title">
    <a href="{{post_url}}" target="_blank">{{title}}</a>
    {{!-- format_url is a function found in helpers.js --}}
    <span>({{format_url post_url}})</span>
  </div>
  <div class="meta">
    <p>{{content}}</p>
  </div>
  {{!-- format_plural is a function found in helpers.js --}}
  <div class="meta">
    {{vote_count}} <i class="fa-solid fa-thumbs-up"></i> {{format_plural "like" vote_count}} by {{user.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>